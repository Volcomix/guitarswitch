{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "make",
    "args": ["LC_ALL=C"],
    "isShellCommand": true,
    "showOutput": "silent",
    "tasks": [
        {
            "taskName": "all",
            "isBuildCommand": true,
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "install",
            "args": ["LV2DIR=~/.lv2"]
        },
        {
            "taskName": "clean"
        }
    ]
}